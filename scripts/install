#!/bin/bash

# Creates folder and download jar.
mkdir /usr/local/codejam
wget -P /usr/local/codejam "https://repository.sonatype.org/service/local/artifact/maven/content?r=central-proxy&g=fr.faylixe&a=googlecodejam-client&v=LATEST"

# Install script.
wget -P /usr/bin "https://raw.githubusercontent.com/Faylixe/googlecodejam-client/master/scripts/codejam"
